@model FloristManagement.Models.Bouquet

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active"><a href="#"><b>Create a bouquet</b></a></li>
        </ul>
        <div id="clock"></div>
    </div>
    @using (Html.BeginForm("Create", "Bouquets", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group col-md-3">
            <label class="control-label">Occasion</label>
            @Html.DropDownList("OccasionID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.OccasionID, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">Name</label>
            <input required type="text" name="Name" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">Description</label>
            <input required type="text" name="Description" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">Brand</label>
            <input required type="text" name="Brand" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">Price</label>
            <input required step="0.01" min="1" type="number" name="Price" class="form-control" />
        </div>

        <div class="form-group col-md-12">
            <label class="control-label">Image</label>
            <div id="myfileupload">
                <input required type="file" id="ImageFile" name="ImageFile" onchange="readURL(this);" />
            </div>
            <div id="thumbbox">
                <img height="450" width="400" alt="Thumb image" id="thumbimage" style="display: none" />
                <a class="removeimg" href="javascript:"></a>
            </div>
            <div id="boxchoice">
                <a href="javascript:" class="Choicefile"><i class="fas fa-cloud-upload-alt"></i> Chọn ảnh</a>
                <p style="clear:both"></p>
            </div>
        </div>
        <div class="form-group">
            <input class=" form-control col-md-2" type="submit" value="Create" />
            <hr />
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }
</main>
